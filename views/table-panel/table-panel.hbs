{{#if table}}
    <div class="container-fluid h-100 d-flex flex-column">
        <div class="row">
            Table N°: {{ table.id }}
        </div>
        <hr>
        <div class="row  flex-grow-1 overflow-auto">
            <div class="col-sm-5 h-100 overflow-auto d-flex flex-column" id="panel-order">
            </div>
            <div class="col-sm-2 h-100 d-flex flex-column">
                <div class="btn-group-vertical" role="group">
                    <button class="btn btn-secondary btn-lg btn-load-products active" type="button" category-id="1"><i class="fas fa-glass-water"></i></button>
                    <button class="btn btn-secondary btn-lg btn-load-products" type="button" category-id="2"><i class="fas fa-martini-glass-empty"></i></button>
                    <button class="btn btn-secondary btn-lg btn-load-products" type="button" category-id="3"><i class="fas fa-bowl-rice"></i></button>
                    <button class="btn btn-secondary btn-lg btn-load-products" type="button" category-id="4"><i class="fas fa-burger"></i></button>
                    <button class="btn btn-secondary btn-lg btn-load-products" type="button" category-id="5"><i class="fas fa-cheese"></i></button>
                </div>
                <div class="d-flex flex-grow-1 align-items-end">
                    <form action="/tables/close" method="post" class="w-100">
                        <input type="submit" class="btn btn-danger btn-lg  w-100" type="button" value="Payer"></button>
                    </form>
                </div>
            </div>
            <div class="col-sm-5  h-100 overflow-auto" id="panel-products">
            </div>
        </div>
    </div>
{{else}}
    Pas de table séléctionnée
{{/if}}
